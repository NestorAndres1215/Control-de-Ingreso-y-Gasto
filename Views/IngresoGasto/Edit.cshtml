@model ControlIngresoGasto.Models.IngresoGasto

@{
    ViewData["Title"] = "Editar Ingreso/Gasto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-3 animate__animated animate__fadeInDown">Editar Ingreso/Gasto</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6 card shadow-lg p-4 bg-white rounded">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="CategoriaId" class="form-label"></label>
                <select asp-for="CategoriaId" class="form-control custom-select" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Fecha" class="form-label"></label>
                <input asp-for="Fecha" type="date" class="form-control shadow-sm" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Valor" class="form-label"></label>
                <input asp-for="Valor" type="number" class="form-control shadow-sm text-right" autocomplete="off" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary btn-animate">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
                <button type="submit" class="btn btn-primary btn-animate">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>
<style>

/* Tarjetas con sombra */
.card {
    border-radius: 10px;
    background: white;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

/* Campos de formulario */
.form-control {
    border-radius: 8px;
    border: 1px solid #ccc;
    transition: all 0.3s ease-in-out;
}

.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 10px rgba(0, 123, 255, 0.3);
}

/* Botones con animación */
.btn-animate {
    transition: all 0.3s ease-in-out;
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    padding: 8px 16px;
    font-weight: bold;
}

    .btn-animate::after {
        content: "";
        position: absolute;
        width: 0;
        height: 100%;
        top: 0;
        left: 50%;
        background: rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease-in-out;
    }

    .btn-animate:hover::after {
        width: 200%;
        left: -50%;
    }

    .btn-animate:hover {
        transform: scale(1.1);
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    }

    .btn-animate:active {
        transform: scale(0.95);
    }


.animate__fadeInDown {
    animation: fadeInDown 1s;
}


.row.justify-content-center {
    margin-top: 50px;
}

       </style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
