@model ControlIngresoGasto.Models.Categoria

@{
    ViewData["Title"] = "Detalles de Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-3 animate__animated animate__fadeInDown">Detalles de Categoría</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6 card shadow-lg p-4 bg-white rounded">
        <h4 class="text-primary">Información de la Categoría</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCategoria)</dd>

            <dt class="col-sm-4">Tipo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>

            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">
                @if (Model.Estado)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactivo</span>
                }
            </dd>
        </dl>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary btn-animate">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-animate">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
</div>
<style>


    /* Tarjetas con sombra */
    .card {
        border-radius: 10px;
        background: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    /* Animación fade-in */
    .animate__fadeInDown {
        animation: fadeInDown 1s;
    }

    /* Botones con animación */
    .btn-animate {
        transition: all 0.3s ease-in-out;
        border-radius: 8px;
        padding: 8px 16px;
        font-weight: bold;
    }

        .btn-animate:hover {
            transform: scale(1.1);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }

        .btn-animate:active {
            transform: scale(0.95);
        }

    /* Centrado del contenido */
    .row.justify-content-center {
        margin-top: 50px;
    }

</style>